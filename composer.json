{
  "name": "ipl/scheduler",
  "type": "library",
  "description": "Icinga PHP Library - Tasks scheduler",
  "keywords": ["task", "job", "scheduler", "cron"],
  "homepage": "https://github.com/Icinga/ipl-scheduler",
  "license": "MIT",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  },
  "require": {
    "php": ">=7.2",
    "dragonmantank/cron-expression": "^3",
    "cweagans/composer-patches": "~1.0",
    "psr/log": "^1",
    "ramsey/uuid": "^3",
    "react/event-loop": "^1",
    "react/promise": "^2",
    "ipl/stdlib": ">=0.12.0"
  },
  "autoload": {
    "psr-4": {
      "ipl\\Scheduler\\": "src"
    }
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "patches": {
      "ramsey/uuid": {
        "Uuid: Support 8.1": "patches/ramsey_uuid_php81.patch"
      }
    }
  }
}
